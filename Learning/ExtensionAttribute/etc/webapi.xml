<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/learning/extension_attribute/create" method="POST">
        <service class="Learning\ExtensionAttribute\Api\ExtensionAttributeManagementInterface" method="createAttributes" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/learning/extension_attribute/delete" method="POST">
        <service class="Learning\ExtensionAttribute\Api\ExtensionAttributeManagementInterface" method="deleteAttributes" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
